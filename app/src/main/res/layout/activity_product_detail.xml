<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetail">

    <ImageView
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/mainImage"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scrollIndicators="bottom"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ru.tinkoff.scrollingpagerindicator.ScrollingPagerIndicator
                android:id="@+id/indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:elevation="20dp"
                app:layout_constraintBottom_toBottomOf="@id/mainImage"
                app:layout_constraintEnd_toEndOf="@id/mainImage"
                app:layout_constraintStart_toStartOf="@id/mainImage"
                app:spi_dotColor="@color/colorPrimary"
                app:spi_dotSelectedColor="@color/colorPrimaryDark"
                app:spi_dotSelectedSize="12dp"
                app:spi_dotSize="8dp"
                app:spi_dotSpacing="8dp"
                app:spi_looped="true"
                app:spi_visibleDotCount="5" />


            <TextView
                android:id="@+id/productName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="0dp"
                android:gravity="center|start"
                android:text="Product"
                android:textColor="#333333"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/saveProduct"
                app:layout_constraintStart_toStartOf="@id/mainImage"
                app:layout_constraintTop_toBottomOf="@id/mainImage" />

            <ImageView
                android:id="@+id/saveProduct"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/bookmark"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/mainImage"
                app:layout_constraintTop_toBottomOf="@+id/mainImage" />

            <TextView
                android:id="@+id/productPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Kshs 200"
                android:textColor="#F18384"
                app:layout_constraintStart_toStartOf="@id/productName"
                app:layout_constraintTop_toBottomOf="@id/productName" />

            <com.vanniktech.emoji.EmojiTextView
                android:id="@+id/productOwner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Product Owner"
                android:gravity="end"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@+id/productName"
                app:layout_constraintStart_toEndOf="@+id/productPrice"
                app:layout_constraintTop_toBottomOf="@+id/productName" />

            <TextView
                android:id="@+id/productDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@+id/productOwner"
                app:layout_constraintStart_toStartOf="@+id/productPrice"
                app:layout_constraintTop_toBottomOf="@+id/productOwner" />

            <TextView
                android:id="@+id/moreTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingBottom="20dp"
                android:text="More from this user"
                android:textColor="#333333"
                app:layout_constraintStart_toStartOf="@+id/productDescription"
                app:layout_constraintTop_toBottomOf="@id/productDescription" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <TextView
        android:id="@+id/productBuy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/primary_gradient"
        android:gravity="center"
        android:padding="10dp"
        android:text="Buy Now"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/half"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/addToCart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark2"
        android:gravity="center"
        android:padding="10dp"
        android:text="Add To Cart"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/half" />

    <View
        android:id="@+id/half"
        android:layout_width="0.001dp"
        android:layout_height="0.001dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/moreProductsPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:background="@drawable/floating_card_view"
        android:elevation="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/closeMoreProducts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ccp_down_arrow"
            android:gravity="center"
            android:text="Close"
            android:textColor="#606060"
            app:layout_constraintBottom_toTopOf="@id/moreProducts"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/moreProducts"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
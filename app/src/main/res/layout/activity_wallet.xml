<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WalletActivity">

    <View
        android:id="@+id/topView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/primary_gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/bgView1"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/round_border_white"
        app:layout_constraintEnd_toStartOf="@id/half"
        app:layout_constraintStart_toStartOf="@id/topView"
        app:layout_constraintTop_toTopOf="@id/topView" />

    <TextView
        android:id="@+id/mumWalletText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="MumWallet balance"
        android:textColor="#333333"
        app:layout_constraintTop_toBottomOf="@+id/mumWalletBalance"
        app:layout_constraintEnd_toEndOf="@+id/bgView1"
        app:layout_constraintStart_toStartOf="@id/bgView1" />

    <TextView
        android:id="@+id/mumWalletBalance"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="KES 0"
        android:textColor="#606060"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@+id/bgView1"
        app:layout_constraintEnd_toEndOf="@+id/bgView1"
        app:layout_constraintStart_toStartOf="@id/bgView1" />


    <View
        android:id="@+id/bgView2"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/round_border_white"
        app:layout_constraintEnd_toEndOf="@id/topView"
        app:layout_constraintStart_toEndOf="@id/half"
        app:layout_constraintTop_toTopOf="@id/topView" />

    <TextView
        android:id="@+id/babyWalletText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="BabyWallet balance"
        android:textColor="#333333"
        app:layout_constraintTop_toBottomOf="@id/babyWalletBalance"
        app:layout_constraintEnd_toEndOf="@+id/bgView2"
        app:layout_constraintStart_toStartOf="@id/bgView2" />

    <TextView
        android:id="@+id/babyWalletBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="KES 0"
        android:textColor="#606060"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/bgView2"
        app:layout_constraintEnd_toEndOf="@+id/bgView2"
        app:layout_constraintStart_toStartOf="@id/bgView2" />


    <View
        android:id="@+id/half"
        android:layout_width="0.01dp"
        android:layout_height="0.01dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/transRecycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topView" />


    <ImageView
        android:id="@+id/profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/user"
        app:layout_constraintBottom_toBottomOf="@id/bottomCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/bottomCard" />

    <View
        android:id="@+id/bottomCard"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_border_white"
        android:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/profile"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/contributions"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:elevation="6dp"
        android:src="@drawable/groups"
        app:layout_constraintBottom_toBottomOf="@id/bottomCard"
        app:layout_constraintEnd_toStartOf="@id/products"
        app:layout_constraintStart_toStartOf="@id/bottomCard"
        app:layout_constraintTop_toTopOf="@id/bottomCard" />

    <ImageView
        android:id="@+id/products"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:elevation="6dp"
        android:src="@drawable/shop"
        app:layout_constraintBottom_toBottomOf="@id/bottomCard"
        app:layout_constraintEnd_toEndOf="@id/bottomCard"
        app:layout_constraintStart_toStartOf="@id/bottomCard"
        app:layout_constraintTop_toTopOf="@id/bottomCard" />

    <ImageView
        android:id="@+id/text"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:elevation="6dp"
        android:src="@drawable/chat"
        app:layout_constraintBottom_toBottomOf="@id/bottomCard"
        app:layout_constraintEnd_toEndOf="@id/bottomCard"
        app:layout_constraintStart_toEndOf="@id/products"
        app:layout_constraintTop_toTopOf="@id/bottomCard" />

</androidx.constraintlayout.widget.ConstraintLayout>
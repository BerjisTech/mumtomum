<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginTop="2dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/mainImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:scrollIndicators="bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ru.tinkoff.scrollingpagerindicator.ScrollingPagerIndicator
            android:id="@+id/indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:elevation="20dp"
            app:layout_constraintBottom_toBottomOf="@id/mainImage"
            app:layout_constraintEnd_toEndOf="@id/mainImage"
            app:layout_constraintStart_toStartOf="@id/mainImage"
            app:spi_dotColor="@color/colorPrimary"
            app:spi_dotSelectedColor="@color/colorPrimaryDark"
            app:spi_dotSelectedSize="12dp"
            app:spi_dotSize="8dp"
            app:spi_dotSpacing="8dp"
            app:spi_looped="true"
            app:spi_visibleDotCount="5" />

        <TextView
            android:id="@+id/productName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Product"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/mainImage"
            app:layout_constraintTop_toTopOf="@id/mainImage" />

        <TextView
            android:id="@+id/productPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="kshs 1,200"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/productQuantity"
            app:layout_constraintStart_toEndOf="@id/mainImage"
            app:layout_constraintTop_toBottomOf="@id/productName" />

        <ImageView
            android:id="@+id/productQuantityMinus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/cart_button"
            android:padding="9dp"
            android:src="@drawable/minus"
            app:layout_constraintBottom_toBottomOf="@+id/mainImage"
            app:layout_constraintStart_toEndOf="@id/mainImage" />

        <EditText
            android:id="@+id/productQuantity"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/transparent"
            android:gravity="center"
            android:minWidth="30dp"
            android:text="1"
            android:inputType="number"
            android:enabled="false"
            android:focusable="false"
            app:layout_constraintBottom_toBottomOf="@+id/productQuantityMinus"
            app:layout_constraintStart_toEndOf="@id/productQuantityMinus"
            app:layout_constraintTop_toTopOf="@+id/productQuantityMinus" />

        <ImageView
            android:id="@+id/productQuantityPlus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/cart_button"
            android:padding="9dp"
            android:src="@drawable/plus_alt"
            app:layout_constraintBottom_toBottomOf="@+id/mainImage"
            app:layout_constraintStart_toEndOf="@id/productQuantity" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>